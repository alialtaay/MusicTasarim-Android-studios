<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:circularflow_angles="20sp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/imageButton11"
        app:srcCompat="@drawable/favorite_48px" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton10"
        app:srcCompat="@drawable/favorite_48px" />

    <Button
        android:id="@+id/button6"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:text="03     Sever"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="locale"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:iconGravity="start"
        app:iconPadding="28dp"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:text="02     So Called Life"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="locale"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:iconGravity="start"
        app:iconPadding="28dp"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins"
        android:text="Phoenix"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="locale"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:icon="@drawable/equalizer_48px"
        app:iconGravity="start"
        app:iconPadding="28dp"
        app:iconSize="24dp"
        app:iconTint="@color/yesilButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins"
        android:text="@string/Calma_listem"
        android:textColor="@color/YaziRenk2"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_ios_48px"
        app:tint="@color/YaziRenk2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="false"
        android:background="@drawable/gradiant2"
        android:baselineAlignBottom="true"
        android:cropToPadding="false"
        android:layerType="none"
        android:scaleType="fitXY"
        app:cornerRadius="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/artworks_p9mkaqac3fyx_0_t500x500" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/poppins"
        android:text="@string/Calma_listem"
        android:textColor="@color/YaziRenk4"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="101dp"
        android:fontFamily="@font/poppins"
        android:text="@string/sarkılar"
        android:textColor="@color/yesilButton"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Phoenix"
        android:textColor="@color/YaziRenk2"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins"
        android:text="Raizer"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/playlist_add_48px"
        app:tint="@color/black" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/repeat_48px"
        app:tint="@color/YaziRenk2" />

    <Button
        android:id="@+id/button"
        android:layout_width="364dp"
        android:layout_height="70dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/yesilButton"
        android:fontFamily="@font/poppins"
        android:text="@string/karıstır"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:icon="@drawable/shuffle_48px"
        app:iconGravity="textStart"
        app:iconPadding="24dp"
        app:iconSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/Songl"
        android:textColor="@color/YaziRenk2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/my_gradiant"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/favorite_48px" />

</androidx.constraintlayout.widget.ConstraintLayout>